    <link rel="stylesheet" href="css/style.css">

</head>

<body style="background-color: #590202; height: 400vh;">
    <%- include('../partials/customernav'); %>
        <form action="/shippingaddress<%=orderID%>" method="post">
            <div class="container drop-shadow bg-white p-4 w-80">
                <div class=" row  ">
                    <h1>Shipping Address</h1>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6  col-margin mb-2">
                        <label for=" name">Name</label>
                        <input class="form-control" type="text" name="name" value="" placeholder="Enter Name">
                    </div>
                    <div class="col-12 col-md-6 col-margin mb-2">
                        <label for="lastName">Last Name</label>
                        <input class="form-control" type="text" name="lastName" value="" placeholder="Enter Last Name">
                    </div>
                    <div class="col-12 col-md-6  col-margin mb-2">
                        <label for="mobile">Mobile</label>
                        <div class="input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">+91</span>
                            <input class="form-control" type="number" name="mobile" value=""
                                placeholder="Enter Mobile Number">
                        </div>
                        <label for="pinCode">Pin Code</label>
                        <input class="form-control" type="number" name="pinCode" value="" placeholder="Enter Pin Code">
                        <label for="state">State</label>
                        <select name="state" class="form-control">
                            <option>Select State</option>
                            <option value="Madhya Pradesh">Madhya Pradesh</option>
                            <option value="Uttar Pradesh">Uttar Pradesh</option>
                            <option value="Jharkhnad">Jharkhnad</option>
                            <option value="Gujrat">Gujrat</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-6  col-margin mb-2">
                        <label for="address">Address</label>
                        <textarea class="form-control" rows="6" name="address" cols=""
                            placeholder="Enter Address"></textarea>
                    </div>
                    <div class="col-12 col-md-6 col-margin mb-2">
                        <label for="city">City</label>
                        <select name="city" class="form-control">
                            <option>Select City</option>
                            <option value="indore">Indore</option>
                            <option value="Mumbai">Mumbai</option>
                            <option value="Delhi">Delhi</option>
                            <option value="Agra">Agra</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-6 col-margin mb-2">
                        <label for="country">Country</label>
                        <select name="country" class="form-control">
                            <option>Select Country</option>
                            <option value="India">India</option>

                        </select>
                    </div>
                    <div class="col-12 col-md-6 d-flex mb-2">
                        <div class="d-grid gap-2 w-100">
                            <button type="button" name="" id="" class="btn btn-danger buyButton">Back</button>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 d-flex mb-2">
                        <div class="d-grid gap-2 w-100">
                            <button type="submit" name="" id="" class="btn btn-danger buyButton">Submit</button>
                        </div>
                    </div>
                </div>
            </div> 
            +

                        </form>
        <%- include('../partials/footer'); %>
</body>
</html>