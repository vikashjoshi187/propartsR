    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@400;700&family=Poppins:wght@300&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">

</head>

<body style="background-color: #590202;">
    <%- include('../partials/navbar'); %>

        <main>

            <%
            if(typeof message !== 'undefined'){
                %>
                <h4><%= message %></h4>
                <%
            }
            %>
            <form action="/forgetpassword" method="post">
                <div class=" row d-flex align-items-center justify-content-center m-0"
                    style="width: 100vw; height: 100vh;">
                    <div
                        class=" container drop-shadow bg-white col-11 col-sm-7 col-md-6 col-lg-4 p-4 d-flex align-items-center justify-content-center">
                        <div class=" w-100">
                            <h1 class="h1 text-center">Forget Password</h1>
                            <input class="form-control form-field mt-5 mb-1" required type="password" name="password" value=""
                                placeholder="password">

                            <div class="d-grid gap-1">
                                <button class="  mt-5 mb-1 main-search-btn" type="submit" name="" id=""
                                    class="btn">Submit</button>
                            </div>
                            <br><br>
                            <a class="nav-link text-center" href="./signup">Not a member? Create Account</a>
                        </div>
                    </div>
                </div>
            </form>
        </main>

        <%- include('../partials/footer'); %>

</body>

</html>