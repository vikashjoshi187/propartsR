<body style="background-color: #590202;">
     <%- include('../partials/adminnav'); %>

     <script>
        $(document).ready(function () {
          $("#myTable").DataTable();
        });
    </script>

    <main>
        <div class="container bg-white p-2">

            <div class=" ms-1 mt-2 p-0   d-flex align-items-center">
                <h1 class="ms-4">Customer List</h1>
            </div>

            <!-- <div class="row  p-2 ">
                <div class="col-12 col-md-6">
                    <form action="">
                        <div class="btn-group ps-2" role="group" aria-label="Basic outlined example">
                            <input type="text" class="form-control" placeholder="Search" name="search">
                            <input type="submit" class="btn btn-danger" value="Search">
                        </div>
                    </form>
                </div>
            </div> -->

            <div id="scrollable-div">

                <div class="container w-100 ">
                    <table id="myTable" class="table table-danger  table-striped ">
                        <thead class="sticky-lg-top">
                            <tr>
                                <th>SNo.</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile No.</th>
                                <!--<th>GST Number</th>
                                <th>UPI Id</th>
                                <th>Pan Number</th> -->
                                <th>Activate/Deactivate</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dummy data rows -->
                            <%var i=1%>
                            <% clist.forEach(function(customer){%>
                            <tr>
                                <td><%= i++ %></td>
                                <td><%= customer.username%></td>
                                <td><%= customer.email%></td>
                                <td><%= customer.phone%></td>
                                <!-- <td><%= customer.gst_number%></td>
                                <td><%= customer.upi_id%></td>
                                <td><%= customer.pan_number%></td> -->
                                <!-- <td><button class="btn btn-danger" type="button">Delete</button></td> -->
                                <td>
                                    <form action="/admin/deactivate/<%= customer.email%>">
                                        <div class="form-check form-switch">
                                            <input class="btn btn-outline-primary" type="submit"
                                                <%=customer.status=='deactivate' ? 'value = activate' : 'value = deactivate' %>>
                                        </div>
                                    </form>
                                </td>

                            </tr>
                            <%});%>
                            <!-- Add more rows with dummy data as needed -->
                        </tbody>
                    </table>
                </div>


            </div>
        </div>



    </main>
    <%- include('../partials/footer'); %>


</body>

</html>