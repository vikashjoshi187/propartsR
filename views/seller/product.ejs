                            <p class="card-text"><%=product.description%></p>
                            <a href="/seller/productupdate<%=product._id%>" class="btn btn-primary buyButton">Update</a>
                        <a href="/seller/deleteProduct<%=product._id%>" class="btn buyButton btn-danger">Remove</a>

